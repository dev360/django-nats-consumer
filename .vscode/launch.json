    "version": "0.2.0",
    "configurations": [
        {
            "name": "Nats Example: Send Messages",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "publish_messages"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/src/example/manage.py"
        },
        {
            "name": "Nats Example: Run Consumer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/example/manage.py",
            "args": [
                "nats_consumer",
                "OrderConsumer",
                "--create-stream"
            ]
        },
        {
            "name": "Ruff",
            "type": "python",
            "request": "launch",
            "program": "-m",
            "args": [
                "ruff",
                "check",
                ".",
                "--fix"
            ]
        }
    ]
}